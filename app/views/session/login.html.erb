<%= form_tag authentificate_url ,autocomplete: 'off', id: 'login-form' ,class: 'animated fadeIn' do %>

	<div id="login-logo"></div>

	<div id="login-greet">Sistema administrador</div>

	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash-#{name}" , class: 'animated shake' %>
	<% end %>	
	<div id='login-fields'>
		<%= text_field_tag :email, nil, autocomplete: 'off',placeholder: 'E-mail', class: "login-field" %>
		<div class="spacer"></div>
		<%= password_field_tag :password, nil , placeholder: 'Password', class: "login-field" %>
	</div>

	<%= submit_tag 'Iniciar sesiÃ³n', id: 'login-button' %>

<% end %>

