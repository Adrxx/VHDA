<%= form_for(@experience, :html => {:id => "experience-form"} ) do |f| %>

  <% if @experience.errors.any? %>
    <div id="form-error">
      <div><%= pluralize(@experience.errors.count, "error", "errores") %>:</div>

      <ul>
      <% @experience.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="experience-form-text-data">

    <div class='text-field-container'>
      <%= f.text_field :title, :placeholder => 'Título' %>
    </div>
    <div class="multi-field">
      <%= f.text_field :place, placeholder: 'Lugar' %>
      <%= f.text_field :time, placeholder: 'Fecha' %>  
    </div>
    <div class="text-area-container">
      <%= f.text_area :description, :placeholder => 'Descripción'  %>
    </div>

  </div>
  <div id="experience-form-media-data">

    <div id="experience-form-photos">
      <%= link_to_add_association 'add task', f, :media,
        :class => 'photo-as-list',
        :'data-association-insertion-method' => 'after',
        :'data-association-insertion-node' => 'this'
      %>
    </div>

      <%= f.submit "Crear experiencia", :id => 'submit-experience' %>

  </div>


<% end %>
