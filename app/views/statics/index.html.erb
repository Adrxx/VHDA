<div id="nav-bar">
  <div id="nav-logo-container">
    <div id="ribbon" class="animated fadeIn">
      <div id="logo"></div>
      <svg viewBox="0 0 10 10" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
        <polygon points="0,0 0,9 5,10 10,9, 10,0"/>
      </svg>
    </div>

  </div>
  <nav id="nav-tabs-container" class="animated fadeIn">
    <%= link_to("Servicios", "#page-section-2") %>
    <%= link_to("Nosotros", "#page-section-3") %>
    <%= link_to("Experiencia", "#page-section-4", class:'selected') %>
    <%= link_to("Contacto", "#") %>
  </nav>
</div>

<section id="page-section-1">
  <div class="page-image-background"></div>
  <div class="page-color-overlay">
  
    <h1 class="animated fadeInUp">Servicios Integrales de Ingeniería</h1>
    <h2 class="animated fadeIn">Civil, conceptual, de detalle, construcción, estudios y consultoría.</h2>

    <svg id="arrow" class="animated infinite pulse" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
      <polyline points="1,4 5,8 9,4" />
    </svg>

  </div>
</section>

<section id="page-section-2">
  <svg id="poly-background" preserveAspectRatio="none" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg" xlink="http://www.w3.org/1999/xlink" version="1.1">
      <g>
         <clipPath id="poly-mask">
            <polygon points="0,0 0,10 10,10 10,0 5,1" />
         </clipPath>
      </g> 
      
      <image clip-path="url(#poly-mask)" preserveAspectRatio="none" height="100%" width="100%" xlink:href="<%= image_url 'bg.jpg' %>" />
      <rect class="left" clip-path="url(#poly-mask)" width="50%" height="100%" />
      <rect class="right" clip-path="url(#poly-mask)" x="50%" width="50%" height="100%" />
  </svg>

  <div class="left-column">
      <div class="content">
        <h1><span>Proyectos</span> Arquitectónicos y de ingeniería.</h1>
        <div class="animated-image"></div>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
      </div>
  </div>
  <div class="right-column">
      <div class="content">
        <h1><span>Asesoría</span> técnica y consultoría.</h1>
        <div class="animated-image"></div>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
        tempor.</p>
      </div>
  </div>
</section>
<section id="page-section-3">
  <div class="left-column">
    <div class="color-overlay">
      <div class="content">
        <h1>Nuestra experiencia.</h1>
        <div class="animated-image"></div>
        <h2>Proyectos terminados y <br> casos de éxito</h2>
      </div>
    </div>
  </div>
  <div class="right-column">

    <div id="projects">
      <% @experiences.each do |exp| %>
          <div class="recent-experience">
            <%= exp.title %>
          </div>
      <% end %>
    </div>

  </div>
</section>
